# ===========================================
# AI Anti-Spam Shield - Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env on your production server
# Generate secure values for all secrets before deploying!

# ===========================================
# SERVER CONFIGURATION
# ===========================================
DOMAIN=your-domain.com
SERVER_IP=your_digitalocean_droplet_ip

# ===========================================
# DATABASE
# ===========================================
# Generate a strong password: openssl rand -base64 32
DB_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# ===========================================
# JWT SECRETS
# ===========================================
# Generate secrets: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_64_CHAR_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_64_CHAR_REFRESH_SECRET

# ===========================================
# ENCRYPTION
# ===========================================
# Generate 32-byte key: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_BYTE_KEY

# ===========================================
# MONITORING
# ===========================================
# Change the default Grafana password
GRAFANA_PASSWORD=CHANGE_ME_STRONG_GRAFANA_PASSWORD

# ===========================================
# SSL/TLS (Let's Encrypt)
# ===========================================
LETSENCRYPT_EMAIL=your-email@example.com

# ===========================================
# CORS (Update with your actual domains)
# ===========================================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=production
LOG_LEVEL=info
